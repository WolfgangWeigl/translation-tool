# env/test.env

# Flask-specific settings
FLASK_ENV=testing
FLASK_DEBUG=false
FLASK_TESTING=true
FLASK_RUN_HOST=0.0.0.0
FLASK_RUN_PORT=5000
MAX_HTTP_BUFFER_SIZE=100000000

# LibreTranslate-specific settings
LT_URL=http://libretranslate:5000
LT_DISABLE_WEB_UI=true
LT_LOAD_ONLY=de,en

# Custom variables
UPLOAD_FOLDER=/tmp/test_uploads
EXTRACTION_FOLDER=/tmp/test_extracted
TRANSLATION_FOLDER=/tmp/test_translated
